[data-provide=chat] {
    position: fixed;
    background-color: #000;
    color: #fff;
    height: 32px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    width: 100%;
    .conversation {
        border: 1px solid #000;
        position: fixed;
        bottom: 0;
        height: 400px;
        width: 250px;
        display: -webkit-flex;
        display: -moz-flex;
        display: flex;
        -webkit-flex-direction: column;
        -moz-flex-direction: column;
        flex-direction: column;

        .title {
            background-color: #000;
            padding: 5px;
        }

        .inner {
            -webkit-flex: 1;
            -moz-flex: 1;
            flex: 1;
            padding: 5px;
            position: relative;
            background-color: #fff;
            color: #000;
        }

        .chat {
            position: absolute;
            bottom: 0;

            .me {
                color: #666;
            }
        }

        input {
            padding: 5px;
            width: 100%;
            z-index: 1;
        }
    }
}


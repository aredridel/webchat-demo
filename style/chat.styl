[data-provide=chat] {
    position: fixed;
    background-color: #000;
    color: #fff;
    height: 32px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    width: 100%;
    .conversation {
        border: 1px solid #000;
        position: fixed;
        bottom: 0;
        height: 400px;
        width: 196px;
        display: -webkit-flex;
        display: -moz-flex;
        display: flex;
        -webkit-flex-direction: column;
        -moz-flex-direction: column;
        flex-direction: column;

        .title {
            i.close {
              position: absolute;
              right: 0;
              top: 0;
              font-size: 12px;
              height: 12px;
              width: 12px;
              margin-top: 4px;
              margin-right: 4px;
              border: 1px solid white;
            }
            background-color: #000;
            padding: 5px;
        }

        .inner {
            -webkit-flex: 1;
            -moz-flex: 1;
            flex: 1;
            padding: 5px;
            position: relative;
            background-color: #fff;
            color: #000;
        }

        .chat {
            position: absolute;
            bottom: 0;

            .me {
                color: #666;
            }
        }

        input {
            padding: 5px;
            width: 100%;
            z-index: 1;
        }

        &:nth-child(2) {
            left: 200px;
        }

        &:nth-child(3) {
            left: 400px;
        }

        &:nth-child(4) {
            left: 600px;
        }

        &:nth-child(5) {
            left: 800px;
        }

        &:nth-child(6) {
            left: 1000px;
        }

        &:nth-child(7) {
            left: 1200px;
        }

        &:nth-child(8) {
            left: 1400px;
        }
    }
}


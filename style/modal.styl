.modal {
  .modal-header, .modal-footer, .modal-body {
    padding: 20px 15px;
  }

  .modal-header {
    border-bottom: 1px solid #EEE;
  }

  .modal-body {
  }

  .modal-footer {
    border-top: 1px solid #EEE;
  }

  position: fixed;
  top: 50%;
  left: 50%;
  width: 50%;
  margin: -25% 0 0 -25%;
  z-index: 1050;
  max-width: 100%;
  box-shadow: 0 3px 7px rgba(0, 0, 0, 0.3);
  border: 1px solid rgba(0, 0, 0, 0.3);
  background-color: #fff;
  border-radius: 5px;
}

.btn {
  display: inline-block;
  cursor: pointer;
  text-align: center;
  vertical-align: middle;
  padding: 5px 15px;
  border-radius: 5px;
  border: 1px solid #ccc;
  color: #fff;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25)
  -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05)
  background-color: #08c;
}
